---
import Clock from "../components/Clock.vue";
const { title } = Astro.props;
import Navbar from "../components/Navbar.astro";
import "../assets/index.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>kholishafid | {title}</title>
    <meta name="description" content="Hafid Personal Site" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/@phosphor-icons/web@2.0.3/src/duotone/style.css"
    />
  </head>
  <body
    class="max-md:px-4 max-lg:px-6 flex flex-col min-h-screen overflow-y-scroll"
  >
    <Navbar />
    <div class="my-16 flex-1">
      <slot />
    </div>
    <footer class="">
      <section
        class="py-6 container max-w-prose mx-auto relative flex justify-between"
      >
        <p class="text-text/50">{new Date().getFullYear()}</p>
        <div>
          <Clock client:load />
        </div>
      </section>
    </footer>
  </body>
</html>
