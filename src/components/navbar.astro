---
import { Image } from "astro:assets";
import Github from "./icons/github.vue";
import Instagram from "./icons/instagram.vue";
import Linkedin from "./icons/linkedin.vue";
import ThemeToggle from "./theme-toggle.vue";
---

<nav class="navbar">
  <section class="max-w-7xl mx-auto navbar__content">
    <div
      class="flex items-center justify-between container px-4 border-x-dashed py-4"
    >
      <a href="/">
        <Image
          src="/images/mark-dark.png"
          alt="mark"
          width={48}
          height={32}
          class="block dark:hidden"
        />
        <Image
          src="/images/mark.png"
          alt="mark dark"
          width={48}
          height={32}
          class="dark:block hidden"
        />
      </a>
      <div class="flex gap-4">
        <ThemeToggle client:only="vue" />
        <button
          class="size-10 grid place-items-center rounded-full hover:bg-light-2 dark:hover:bg-dark-8 transition"
          aria-label="instagram"
        >
          <a
            href="https://www.instagram.com/levi.milev/"
            rel="noreferrer"
            target="_blank"
            title="instagram"
          >
            <Instagram />
          </a>
        </button>
        <button
          class="size-10 grid place-items-center rounded-full hover:bg-light-2 dark:hover:bg-dark-8 transition"
          aria-label="linkedin"
        >
          <a
            href="https://www.linkedin.com/in/kholishafid/"
            rel="noreferrer"
            target="_blank"
            title="linkedin"
          >
            <Linkedin />
          </a>
        </button>
        <button
          class="size-10 grid place-items-center rounded-full hover:bg-light-2 dark:hover:bg-dark-8 transition"
          aria-label="github"
        >
          <a
            href="https//github.com/kholishafid"
            rel="noreferrer"
            target="_blank"
            title="github"
          >
            <Github />
          </a>
        </button>
      </div>
    </div>
  </section>
</nav>
